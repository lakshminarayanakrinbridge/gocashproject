<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cashier Name"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/cashiername_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="#000000"
            android:text="User_1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/layout_two"
        android:layout_below="@+id/layout_one"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/mobilenumber_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:text="User_1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_three"
        android:layout_below="@+id/layout_two"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="E-Mail Id"/>
        <TextView
            android:id="@+id/emailid_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71dp"
            android:textColor="#000000"
            android:text="User_1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_four"
        android:layout_below="@+id/layout_three"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Terminal Id"/>
        <TextView
            android:id="@+id/terminalid_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:textColor="#000000"
            android:text="User_1"/>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/layout_four"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />






</LinearLayout>


