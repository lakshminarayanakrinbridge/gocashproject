<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/id9"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/id2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/id3"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mercode_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merchant Code:"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/merchantcode_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user_merchantcode"
            android:textColor="#000000"
            android:textSize="18dp"
           />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id4"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/id5"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mercat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merchant Category:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/merchantcategory_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user_merchantcategory"
            android:textColor="#000000"
            android:textSize="18dp"
            />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id6"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/id8"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mername_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merchant Name:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/merchantname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user_merchantname"
            android:textColor="#000000"
            android:textSize="18dp"
            />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/approve_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approve"
        android:layout_gravity="right"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#9400D3"/>
    <View
        android:background="#000000"
        android:id="@+id/id7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</LinearLayout>