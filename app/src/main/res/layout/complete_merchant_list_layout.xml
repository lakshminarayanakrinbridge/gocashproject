<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="2dp"/>
    <LinearLayout
        android:id="@+id/id2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/id3"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mercode_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merchant Code:"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/merchantcode_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_merchantcode"
                android:textSize="18dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id4"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/id5"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mercat_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merchant Category:"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/merchantcategory_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_merchantcategory"
                android:textSize="18dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id6"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/id8"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mername_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merchant Name:"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/merchantname_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_merchantname"
                android:textSize="18dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id9"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ecashbal_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Cash Balance:"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/ecashbalance_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user_ecashbalance"
        android:textSize="18dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/id10"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/Edit_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EditMerchant"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="#9400D3"/>
        <TextView
            android:id="@+id/viewterminal_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViewTerminals"
            android:layout_marginLeft="120dp"
            android:textStyle="bold"
            android:textColor="#9400D3"/>



        </LinearLayout>
    </LinearLayout>

    <View
        android:background="#000000"
        android:id="@+id/id7"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>